<div class="center-form">
<%= form_for @user_session, :url => user_session_path do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation">
      <h2>Tienes que solucionar <%= pluralize(@user_session.errors.count, "error", "errores") %> antes de continuar:</h2>

      <ul class="fa-ul">
      <% @user_session.errors.full_messages.each do |msg| %>
        <li>
			<i class="fa fa-exclamation-triangle"></i>
			<%= msg %>
		</li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  	<%= f.text_field :login, :placeholder => "Nombre de usuario" %>
  </div>
  <div class="field">
  	<%= f.password_field :password, :placeholder =>"Contraseña" %>
  </div>
  <div class="field">
    <%= f.check_box :remember_me %><%= f.label :remember_me, "Recordar contraseña" %>
  </div>
  <div class="actions">
  	<%= f.submit "Acceder" %>
  </div>
<% end %>
</div>