<section id="slide-1" class="homeSlide">
    <div class="bcg"
        data-center="background-position: 50% 0px;"
        data-top-bottom="background-position: 50% -100px;"
        data-anchor-target="#slide-1"
        style="height:600px"
    >
        <div class="hsContainer">
            <div class="hsContent"
                data-center="opacity: 1"
                data-1000-top="opacity: 0"
                opacity="1"
                data-anchor-target="#slide-1 h2"
            >
                <h2>Mmmm!</h2>
				<h3>Únete a la mejor comunidad culinaria de la red</h3>
				<h3 class="superclick"><%= link_to "Regístrate", new_user_path %></h3>
            </div>
        </div>
    </div>
</section>

